<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:background="@drawable/booksa"
    android:layout_gravity="center"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    android:padding="10dp"
    app:cardBackgroundColor="#00FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#00F4F4F4"
        android:layout_height="match_parent"
        tools:context=".AddBookDetails">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Add Book Details"
    android:gravity="center"
    android:textSize="24dp"
    android:layout_margin="10dp"
    android:textColor="#2D17F1"
    android:layout_marginBottom="15dp"/>
        <EditText
            android:id="@+id/bookname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="10dp"
            android:background="@drawable/editback"
            android:layout_margin="10dp"
            android:inputType="textPersonName"
            android:hint="Book Name" />

        <EditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="10dp"
            android:background="@drawable/editback"
            android:layout_margin="10dp"
            android:inputType="datetime"
            android:hint="Date" />

        <EditText
            android:id="@+id/validdays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="10dp"
            android:background="@drawable/editback"
            android:layout_margin="10dp"
            android:inputType="number"
            android:hint="Valid Days" />


        <EditText
            android:id="@+id/stu_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="10dp"
            android:background="@drawable/editback"
            android:layout_margin="10dp"
            android:hint="Student Name" />
        <EditText
            android:id="@+id/department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="10dp"
            android:background="@drawable/editback"
            android:layout_margin="10dp"
            android:hint="Department" />


        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="top"
            android:padding="10dp"
            android:background="@drawable/editback"
            android:layout_margin="10dp"
            android:inputType="textMultiLine"
            android:hint="Description" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="horizontal">
        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textColor="#fff"
            android:backgroundTint="#2454ef"
            android:text="Add" />

        <Button
            android:id="@+id/viewbooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:backgroundTint="#9024EF"
            android:text="View List" />
</LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>